# =============================================================================
# GCP環境変数テンプレート
# =============================================================================
# 使用方法: このファイルを .env.gcp にコピーして値を設定
# cp .env.gcp.template .env.gcp
# =============================================================================

# ---------------------------------------------------------------------------
# プラットフォーム設定
# ---------------------------------------------------------------------------
PLATFORM=gcp

# ---------------------------------------------------------------------------
# GCP Vertex AI 設定
# ---------------------------------------------------------------------------
GCP_PROJECT_ID=YOUR_PROJECT_ID
GCP_LOCATION=asia-northeast1
GCP_VERTEXAI_ENDPOINT=https://asia-northeast1-aiplatform.googleapis.com
GCP_VERTEXAI_MODEL=gemini-3-pro

# ---------------------------------------------------------------------------
# GCP Document AI 設定
# ---------------------------------------------------------------------------
GCP_DOCUMENTAI_PROCESSOR_ID=YOUR_PROCESSOR_ID
GCP_DOCUMENTAI_LOCATION=us
GCP_DOCUMENTAI_ENDPOINT=https://us-documentai.googleapis.com

# ---------------------------------------------------------------------------
# GCP Secret Manager 設定
# ---------------------------------------------------------------------------
GCP_SECRET_MANAGER_PROJECT_ID=YOUR_PROJECT_ID

# ---------------------------------------------------------------------------
# GCP Cloud Logging 設定
# ---------------------------------------------------------------------------
GCP_LOGGING_PROJECT_ID=YOUR_PROJECT_ID
GCP_LOGGING_LOG_NAME=ic-test-evaluator

# ---------------------------------------------------------------------------
# GCP Cloud Trace 設定
# ---------------------------------------------------------------------------
GCP_TRACE_PROJECT_ID=YOUR_PROJECT_ID
GCP_TRACE_ENABLED=true

# ---------------------------------------------------------------------------
# GCP Firestore 設定（ジョブストレージ用）
# ---------------------------------------------------------------------------
GCP_FIRESTORE_PROJECT_ID=YOUR_PROJECT_ID
GCP_FIRESTORE_COLLECTION=ic-test-jobs

# ---------------------------------------------------------------------------
# GCP Cloud Storage 設定（エビデンスストレージ用）
# ---------------------------------------------------------------------------
GCP_STORAGE_BUCKET_NAME=ic-test-evidence
GCP_STORAGE_PROJECT_ID=YOUR_PROJECT_ID

# ---------------------------------------------------------------------------
# GCP Apigee 設定
# ---------------------------------------------------------------------------
GCP_APIGEE_ENDPOINT=https://xxxxx-eval.apigee.net/evaluate
GCP_API_KEY=YOUR_API_KEY_HERE

# ---------------------------------------------------------------------------
# ログ設定
# ---------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_CORRELATION_ID_HEADER=X-Correlation-ID

# ---------------------------------------------------------------------------
# 監視設定
# ---------------------------------------------------------------------------
MONITORING_ENABLED=true
MONITORING_SAMPLE_RATE=0.1

# ---------------------------------------------------------------------------
# エラーハンドリング設定
# ---------------------------------------------------------------------------
ENVIRONMENT=production  # production または development
INCLUDE_INTERNAL_ERRORS=false  # 本番環境では必ずfalse

# ---------------------------------------------------------------------------
# LLM設定
# ---------------------------------------------------------------------------
LLM_PROVIDER=gcp_vertexai
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.3

# ---------------------------------------------------------------------------
# OCR設定
# ---------------------------------------------------------------------------
OCR_PROVIDER=gcp_documentai
OCR_LANGUAGE=ja

# ---------------------------------------------------------------------------
# GCP認証情報（ローカル開発のみ、本番環境ではサービスアカウント使用）
# ---------------------------------------------------------------------------
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
