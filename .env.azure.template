# =============================================================================
# Azure環境変数テンプレート
# =============================================================================
# 使用方法: このファイルを .env.azure にコピーして値を設定
# cp .env.azure.template .env.azure
# =============================================================================

# ---------------------------------------------------------------------------
# プラットフォーム設定
# ---------------------------------------------------------------------------
PLATFORM=azure

# ---------------------------------------------------------------------------
# Azure AI Foundry (OpenAI) 設定
# ---------------------------------------------------------------------------
AZURE_FOUNDRY_ENDPOINT=https://YOUR_RESOURCE_NAME.openai.azure.com/
AZURE_FOUNDRY_API_KEY=YOUR_API_KEY_HERE
AZURE_FOUNDRY_DEPLOYMENT_NAME=gpt-4o
AZURE_FOUNDRY_API_VERSION=2024-02-15-preview

# ---------------------------------------------------------------------------
# Azure Document Intelligence 設定
# ---------------------------------------------------------------------------
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://YOUR_RESOURCE_NAME.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=YOUR_API_KEY_HERE

# ---------------------------------------------------------------------------
# Azure Key Vault 設定
# ---------------------------------------------------------------------------
AZURE_KEY_VAULT_NAME=ic-test-kv
AZURE_KEY_VAULT_URL=https://ic-test-kv.vault.azure.net/

# ---------------------------------------------------------------------------
# Azure Application Insights 設定
# ---------------------------------------------------------------------------
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=YOUR_INSTRUMENTATION_KEY;IngestionEndpoint=https://japaneast-1.in.applicationinsights.azure.com/;LiveEndpoint=https://japaneast.livediagnostics.monitor.azure.com/

# ---------------------------------------------------------------------------
# Azure Storage Account 設定（ジョブストレージ用）
# ---------------------------------------------------------------------------
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT_NAME;AccountKey=YOUR_ACCOUNT_KEY;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=ic-test-jobs

# ---------------------------------------------------------------------------
# Azure APIM 設定
# ---------------------------------------------------------------------------
AZURE_APIM_ENDPOINT=https://ic-test-apim.azure-api.net/api
AZURE_APIM_SUBSCRIPTION_KEY=YOUR_SUBSCRIPTION_KEY

# ---------------------------------------------------------------------------
# ログ設定
# ---------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_CORRELATION_ID_HEADER=X-Correlation-ID

# ---------------------------------------------------------------------------
# 監視設定
# ---------------------------------------------------------------------------
MONITORING_ENABLED=true
MONITORING_SAMPLE_RATE=0.1

# ---------------------------------------------------------------------------
# エラーハンドリング設定
# ---------------------------------------------------------------------------
ENVIRONMENT=production  # production または development
INCLUDE_INTERNAL_ERRORS=false  # 本番環境では必ずfalse

# ---------------------------------------------------------------------------
# LLM設定
# ---------------------------------------------------------------------------
LLM_PROVIDER=azure_foundry
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.3

# ---------------------------------------------------------------------------
# OCR設定
# ---------------------------------------------------------------------------
OCR_PROVIDER=azure_document_intelligence
OCR_LANGUAGE=ja
